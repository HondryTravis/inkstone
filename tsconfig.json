{
    "compilerOptions": {
        "lib": ["DOM", "ESNext"],
        "target": "ESNext",
        "allowJs": false,
        "sourceMap": false,
        "declaration": true,
        "declarationDir": "types",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@inkstone/*": ["packages/*/src"]
        }
    },
    "include": [
        "packages/*/src",
        "packages/index.d.ts"
    ]
}
